{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://openclaw.ai/schemas/skill-manifest.json",
  "title": "OpenClaw Skill Manifest",
  "description": "Schema for validating OpenClaw skill manifests",
  "type": "object",
  "required": ["id", "name", "version"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9-]*[a-z0-9]$",
      "minLength": 3,
      "maxLength": 64,
      "description": "Unique identifier for the skill (lowercase, alphanumeric with hyphens)"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "description": "Human-readable name for the skill"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-z0-9]+)?$",
      "description": "Semantic version (e.g., 1.0.0, 2.1.0-beta)"
    },
    "description": {
      "type": "string",
      "maxLength": 1024,
      "description": "Brief description of what the skill does"
    },
    "author": {
      "type": "string",
      "maxLength": 256,
      "description": "Author name or organization"
    },
    "license": {
      "type": "string",
      "maxLength": 64,
      "description": "SPDX license identifier"
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "URL to skill documentation or homepage"
    },
    "repository": {
      "type": "string",
      "format": "uri",
      "description": "URL to source code repository"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 32
      },
      "maxItems": 20,
      "description": "Keywords for discoverability"
    },
    "permissions": {
      "type": "object",
      "description": "Permissions required by the skill",
      "properties": {
        "filesystem": {
          "type": "object",
          "properties": {
            "read": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Paths the skill needs to read"
            },
            "write": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Paths the skill needs to write"
            }
          },
          "additionalProperties": false
        },
        "network": {
          "type": "object",
          "properties": {
            "egress": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Hostnames/IPs the skill needs to connect to"
            },
            "listen": {
              "type": "boolean",
              "default": false,
              "description": "Whether the skill needs to listen on a port"
            }
          },
          "additionalProperties": false
        },
        "subprocess": {
          "type": "object",
          "properties": {
            "allowed": {
              "type": "boolean",
              "default": false,
              "description": "Whether the skill can spawn subprocesses"
            },
            "commands": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Specific commands the skill may execute"
            }
          },
          "additionalProperties": false
        },
        "environment": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Environment variables the skill needs access to"
        }
      },
      "additionalProperties": false
    },
    "runtime": {
      "type": "object",
      "description": "Runtime requirements",
      "properties": {
        "timeout_seconds": {
          "type": "integer",
          "minimum": 1,
          "maximum": 300,
          "default": 30,
          "description": "Maximum execution time in seconds"
        },
        "memory_mb": {
          "type": "integer",
          "minimum": 16,
          "maximum": 1024,
          "default": 128,
          "description": "Maximum memory usage in MB"
        },
        "platforms": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["darwin", "linux", "win32"]
          },
          "description": "Supported platforms"
        },
        "requires": {
          "type": "object",
          "properties": {
            "bins": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Required binaries that must be present"
            },
            "anyBins": {
              "type": "array",
              "items": { "type": "string" },
              "description": "At least one of these binaries must be present"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "entrypoint": {
      "type": "string",
      "description": "Path to the main skill file relative to manifest"
    },
    "tools": {
      "type": "array",
      "description": "Tools provided by this skill",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$",
            "description": "Tool name (snake_case)"
          },
          "description": {
            "type": "string",
            "maxLength": 512,
            "description": "Tool description for AI"
          }
        }
      }
    },
    "hooks": {
      "type": "array",
      "description": "Hooks this skill registers",
      "items": {
        "type": "string",
        "enum": [
          "before_message",
          "after_message",
          "before_tool",
          "after_tool",
          "on_error",
          "on_start",
          "on_stop"
        ]
      }
    }
  },
  "additionalProperties": false
}
